#!/usr/bin/env bash

function elementarysourcecode() {        
        wget  https://github.com/powerline/fonts/blob/master/SourceCodePro/Source%20Code%20Pro%20Medium%20for%20Powerline.otf
        sudo mv ./Source\ Code\ Pro\ Medium\ for\ Powerline.otf /usr/share/fonts/type1
        sudo fc-cache -fv # fc-list | grep "Source Code Pro" to confirm
        gsettings set io.elementary.terminal.settings font 'Source Code Pro for Powerline Regular 16'
} 

function nordelementary() {
        gsettings set io.elementary.terminal.settings foreground '#D8DEE9'
        gsettings set io.elementary.terminal.settings background '#2E3440'
        gsettings set io.elementary.terminal.settings palette '#3B4252:#BF616A:#A3BE8C:#EBCB8B:#81A1C1:#B48EAD:#88C0D0:#E5E9F0:#4C566A:#BF616A:#A3BE8C:#EBCB8B:#81A1C1:#B48EAD:#8FBCBB:#ECEFF4'
}

function nordxresources() {
        curl -fLo ./nord-xresources https://raw.githubusercontent.com/arcticicestudio/nord-xresources/develop/src/nord
        xrdb -merge ./nord-xresources
}

function trimelementary() {
        gsettings set io.elementary.terminal.settings tab-bar-behavior 'Never Show Tabs'
        gsettings set io.elementary.terminal.settings remember-tabs false
        gsettings set io.elementary.terminal.settings save-exited-tabs false
        gsettings set io.elementary.terminal.settings alt-changes-tab false
        gsettings set io.elementary.terminal.settings follow-last-tab false
}
